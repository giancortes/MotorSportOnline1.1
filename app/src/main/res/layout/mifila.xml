<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/miimagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="79dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/talleres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="Titulo"
                app:layout_constraintStart_toEndOf="@+id/miimagen"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario"
                app:layout_constraintStart_toEndOf="@+id/miimagen"
                app:layout_constraintTop_toBottomOf="@+id/talleres" />

            <TextView
                android:id="@+id/horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion"
                app:layout_constraintStart_toEndOf="@+id/miimagen"
                app:layout_constraintTop_toBottomOf="@+id/ubicacion" />

            <TextView
                android:id="@+id/tipo_reparacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo_Reparacion"
                app:layout_constraintStart_toEndOf="@+id/miimagen"
                app:layout_constraintTop_toBottomOf="@+id/horario" />

            <TextView
                android:id="@+id/contacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacto"
                app:layout_constraintStart_toEndOf="@+id/miimagen"
                app:layout_constraintTop_toBottomOf="@+id/tipo_reparacion" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>